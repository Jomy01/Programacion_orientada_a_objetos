using System;
					
public class Program
{
	public static void Main()
	{
		// declaración de personas (hay una clase Persona creada más abajo)
		Persona persona1 = new Persona();
		Persona persona2 = new Persona();
		Persona persona3 = new Persona();
		
		//Inicializamos 
		persona1.nombre = "Julio";
		persona2.nombre = "Natalia";
		
		//Operaciones
		persona1.Saludar();
		persona2.Saludar();
		persona3.Saludar();
	}
}
public class Persona
{
	// le decimos que si no nos dan el nombre de alguna persona, utilice el nombre "Nadie". A la persona3 no le hemos dado nombre
	public string nombre = "Nadie";

	public void Saludar()
	{
		Console.WriteLine("Hola, me llamo " + nombre);
	}
}
